{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "jsx": "preserve",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
  },
  "include": [
    "src",
    "vite.config.ts",
    "svg.d.ts",
  ],
  "exclude": [
    "node_modules",
    ".yarn",
    "dist"
  ],
}
